[flake8]
max-line-length = 88
select = E,W,F
ignore =
    E203,  # whitespace before ':'
    E501,  # line too long (handled by black)
    W503,  # line break before binary operator
exclude =
    .git,
    .venv,
    __pycache__,
    .mypy_cache,
    .pytest_cache,
    build,
    dist,
    *.egg-info
per-file-ignores =
    __init__.py:F401
    tests/*:F401,F811
max-complexity = 10